{
  "name": "Orderly",
  "version": "0.0.6",
  "manifest_version": 2,
  "description": "Orderly is a basic productivity app.",
  "homepage_url": "https://github.com/raksonibs/chrome_ext",
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "icons": {
    "48": "icons/factory1_64.png",
    "128": "icons/factory1_128.png",
    "16": "icons/factory1.png"
  },
   "chrome_url_overrides": {
    "newtab": "src/browser_action/browser_action.html"
  },
  "browser_action": {
    "default_icon": "icons/factory1.png",
    "default_title": "browser action",
    "default_popup": "src/browser_action/browser_action.html"
  }
}
